{
	"extends": "tooling/typescript-config/node",
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"core/*": ["./src/core/*"],
			"infrastructure/*": ["./src/infrastructure/*"],
			"application/*": ["./src/application/*"],
			"http/*": ["./src/http/*"]
		}
	},
	"include": [".", "drizzle.config.ts", "drizzle.migrate.ts"],
	"exclude": ["node_modules"]
}
