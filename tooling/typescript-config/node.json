{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    ".next",
    ".expo"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": [
      "ES2022",
			"ESNext",
      "DOM"
    ],
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
		"types": ["node"]
  }
}
